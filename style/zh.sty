\NeedsTeXFormat{LaTeX2e}
\ProvidesExplFile{}{}{}{}

\tl_new:N \@@_fontset
\tl_new:N \@@_shssuffix
\tl_new:N \kaifontname
\tl_new:N \fangfontname

\keys_define:nn {@@}{
  SHS.tl_set:N  = \@@_shssuffix,
  SHS.default:n = {SC},
  fontset.tl_set:N  = \@@_fontset,
  fontset.initial:n = {fandol},
  kai.tl_set:N   = \kaifontname,
  kai.initial:n  = {FandolKai-Regular.otf},
  fang.tl_set:N  = \fangfontname,
  fang.initial:n = {FandolFang-Regular.otf},
}

\ProcessKeysOptions{@@}

\PassOptionsToPackage{CJKmath}{xeCJK} % 中文支持，CJKmath公式中直接的中文
\RequirePackage[fontset=none]{ctex}

\ctexset{
  abstractname = {本文概要},
  bibname = {参考文献},
  % refname = {参考文献},
}
% ctex的设置在natbib后会失效
% \def\bibname{参考文献}
% \def\refname{参考文献}

% 字体设置
\tl_if_empty:NTF\@@_shssuffix{
  \ctexset{
    fontset=\@@_fontset,
  }
}{
  \setCJKmainfont{SourceHanSerif\@@_shssuffix}[
    UprightFont = *-Regular,
    BoldFont = *-Medium,
    ItalicFont = \kaifontname ,
    BoldItalicFont = \kaifontname
  ]
  \setCJKsansfont{SourceHanSans\@@_shssuffix}[
    UprightFont = *-Regular,
    BoldFont = *-Medium,
    ItalicFont = \kaifontname ,
    BoldItalicFont = \kaifontname
  ]
  \setCJKmonofont{SourceHanSans\@@_shssuffix}[
    UprightFont = *-Regular,
    BoldFont = *-Medium,
    ItalicFont = \kaifontname ,
    BoldItalicFont = \kaifontname
  ]
}

% 其他字体
\newCJKfontfamily\kai{\kaifontname}[
  BoldFont = *,
  ItalicFont = *,
  BoldItalicFont = *
]
\newCJKfontfamily\fang{\fangfontname}[
  BoldFont = *,
  ItalicFont = *,
  BoldItalicFont = *
]
